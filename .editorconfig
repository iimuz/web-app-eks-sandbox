root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{*.js,*.mjs,*.ts}]
indent_style = space
indent_size = 2

[{*.json,*.jsonc,*.jsonl}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.rs]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.tsp]
indent_style = space
indent_size = 2

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
